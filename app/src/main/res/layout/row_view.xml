<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.02">

                <ImageView
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/socialImageView"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:layout_width="170dp"
                    android:layout_height="120dp" />

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@android:color/transparent"
                android:id="@+id/cardView"
                android:layout_weight="0.02"
                app:cardElevation="6dp"
                app:cardCornerRadius="3dp"
                app:contentPadding="5dp"
                android:alpha="0.80"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:background="#C9F7FF"
                    >

                    <TextView
                        android:text="Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/socialName"
                        android:textSize="24sp"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/socialImageView"
                        android:textAlignment="center"
                        android:textColor="#1E3F80"
                        android:textStyle="normal|bold"
                        android:fontFamily="sans-serif-smallcaps" />

                    <TextView
                        android:text="emailaddress@gmail.com"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/hostEmail"
                        android:textSize="18sp"
                        app:layout_constraintLeft_toRightOf="@+id/socialImageView"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/socialName"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintBottom_toTopOf="@+id/interested"
                        android:textAlignment="center"
                        android:textColor="#1E3F80"
                        android:layout_gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill" />

                    <TextView
                        android:text="0 Interested"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/interested"
                        android:textSize="18sp"
                        app:layout_constraintLeft_toRightOf="@+id/socialImageView"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textColor="#1E3F80"
                        android:gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill"
                        android:textAlignment="center" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
