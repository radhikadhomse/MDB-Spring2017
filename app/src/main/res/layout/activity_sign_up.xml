<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.radhika.mdbsocials.SignUpActivity"
    android:background="@drawable/blue_white_bg"
    >


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nameText"
        android:hint="Name"
        app:layout_constraintLeft_toLeftOf="@+id/signUpTextView"
        app:layout_constraintRight_toRightOf="@+id/signUpTextView"
        app:layout_constraintTop_toBottomOf="@+id/signUpTextView"
        android:layout_marginTop="24dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordText"
        android:hint="Password"
        android:textColor="#000000"
        app:layout_constraintRight_toRightOf="@+id/emailText"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/emailText"
        app:layout_constraintLeft_toLeftOf="@+id/emailText" />

    <TextView
        android:text="SIGN UP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signUpTextView"
        android:layout_marginTop="88dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:textSize="30sp"
        android:fontFamily="sans-serif-smallcaps" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailText"
        android:hint="Email"
        app:layout_constraintRight_toRightOf="@+id/nameText"
        app:layout_constraintLeft_toLeftOf="@+id/nameText"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/nameText" />

    <Button
        android:text="Upload Photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uploadPhoto"
        android:background="@drawable/edit_text_border"

        app:layout_constraintLeft_toLeftOf="@+id/passwordText"
        app:layout_constraintRight_toRightOf="@+id/passwordText"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/passwordText"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" />

    <Button
        android:text="SIGN UP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_border"

        android:id="@+id/signUpButton"
        app:layout_constraintLeft_toLeftOf="@+id/uploadPhoto"
        app:layout_constraintRight_toRightOf="@+id/uploadPhoto"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/uploadPhoto"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>
