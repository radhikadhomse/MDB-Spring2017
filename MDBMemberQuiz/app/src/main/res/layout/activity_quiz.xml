<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6ffff"
    tools:context="com.example.radhika.mdbmemberquiz.QuizActivity">

    <ImageView
        android:layout_width="208dp"
        android:layout_height="247dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/memberPicture"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <TextView
        android:text="Score: 0"
        android:id="@+id/scoreField"
        android:textSize="14sp"
        android:layout_width="110dp"
        android:layout_height="24dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@+id/endGameButton"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/endGameButton" />

    <TextView
        android:text="Countdown: 0"
        android:layout_height="24dp"
        android:id="@+id/countdownText"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_width="110dp"
        app:layout_constraintTop_toTopOf="@+id/endGameButton"
        app:layout_constraintBottom_toBottomOf="@+id/endGameButton"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <Button
        android:text="End Game"
        android:id="@+id/endGameButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/holo_blue_light"
        android:layout_width="100dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:layout_constraintRight_toLeftOf="@+id/countdownText"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/scoreField"
        android:layout_marginLeft="8dp" />

    <Button
        android:text="Button"
        android:id="@+id/button0"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/holo_green_light"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/memberPicture"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="64dp"
        android:textAlignment="center"
        android:layout_width="150dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp" />


    <Button
        android:text="Button"
        android:id="@+id/button1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/holo_blue_dark"
        app:layout_constraintTop_toTopOf="@+id/button0"
        app:layout_constraintLeft_toRightOf="@+id/button0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_height="64dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:textAlignment="center"
        android:layout_width="150dp" />

    <Button
        android:text="Button"
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/holo_blue_bright"
        app:layout_constraintLeft_toLeftOf="@+id/button0"
        app:layout_constraintTop_toBottomOf="@+id/button0"
        android:layout_marginTop="4dp"
        android:layout_height="64dp"
        android:textAlignment="center"
        android:layout_width="150dp" />

    <Button
        android:text="Button"
        android:id="@+id/button3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/holo_green_dark"
        app:layout_constraintRight_toRightOf="@+id/button1"
        app:layout_constraintLeft_toRightOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="@+id/button2"
        app:layout_constraintVertical_bias="1.0"
        android:layout_height="64dp"
        android:textAlignment="center"
        android:layout_width="150dp" />

</android.support.constraint.ConstraintLayout>
